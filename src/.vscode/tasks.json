{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "web/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc"
		},
		{
			"type": "deno",
			"command": "run",
			"problemMatcher": [
				"$deno"
			],
			"label": "deno: run",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"args": [
				"-A",
				"--watch",
				"--unstable-kv",
				"main.ts"
			],
			"dependsOn":[
				"tsc"
			]
		}
	]
}